kind: Service
metadata:
  name: {{ notebook_name }}
  namespace: {{ namespace }}
  labels:
    # TODO
spec:
  selector:
    # TODO
    selector: TBD
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8888
